@model List<PostItemViewModel>

<section class="section-padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="row">

                    @foreach (var item in Model)
                    {
                        <div class="col-lg-3 col-md-6">
                            <article class="post-grid mb-5">
                                @*@if (item.ImageUrl is not null)
                                {
                                    <div class="col-md-5">
                                        <a class="post-thumb" asp-controller="Blog" asp-action="Detail" asp-route-id="@item.Post.Id">
                                            <img src="@item.ImageUrl" alt="" class="img-fluid w-100">
                                        </a>
                                    </div>
                                }
                                else
                                {
                                    <div class="col-md-5">
                                        <a class="post-thumb" asp-controller="Blog" asp-action="Detail" asp-route-id="@item.Post.Id">
                                            <img src="~/Img/news/f1.jpg" alt="" class="img-fluid w-100">
                                        </a>
                                    </div>
                                }*@
                                <a asp-controller="Blog" asp-action="Detail" asp-route-id="@item.PostId" class="post-thumb mb-4 d-block">
                                    <img src="@item.ImageUrl" alt="" class="img-fluid w-100">
                                </a>
                                <span class="cat-name text-color font-extra text-sm text-uppercase letter-spacing-1">@Html.Raw(item.Title)</span>
                                <h3 class="post-title mt-1">
                                    <a asp-controller="Blog" asp-action="Detail" asp-route-id="@item.PostId">
                                        @if (item.Name.Length > 60)
                                        {
                                            @Html.Raw(item.Name.Substring(0, 60) + "...")
                                        }
                                        else
                                        {
                                            @Html.Raw(item.Name)
                                        }
                                    </a>
                                </h3>
                                <span class="text-muted letter-spacing text-uppercase font-sm">@item.Date.ToString("dd.MM.yyyy")</span>
                            </article>
                        </div>
                    }
                </div>
            </div>
            <div class="m-auto">
                <div class="pagination mt-5 pt-4">
                    <ul class="list-inline ">
                        <li class="list-inline-item"><a href="#" class="active">1</a></li>
                        <li class="list-inline-item"><a href="#">2</a></li>
                        <li class="list-inline-item"><a href="#">3</a></li>
                        <li class="list-inline-item"><a href="#" class="prev-posts"><i class="ti-arrow-right"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
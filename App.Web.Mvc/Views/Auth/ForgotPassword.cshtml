@{
    ViewData["Title"] = "Yeni Şifre Talebi";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">Parola Yenileme</h3></div>
                <div class="card-body">
                    <div class="small mb-3 text-muted">Email adresinizi girerek talepte bulunabilirsiniz.</div>
                    <form asp-action="NewPassword">
                        <div class="form-floating mb-3">
                            <input name="email" class="form-control" id="inputEmail" type="email" placeholder="name@example.com" />
                            <label for="inputEmail">Email</label>
                        </div>
                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                            <a class="small" asp-action="Login">Giriş Sayfasına Dön</a>
                            <a class="btn btn-primary" href="login.html">Parola Sıfırla</a>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center py-3">
                    <div class="small"><a asp-action="Register">Hesabınız yok mu? Şimdi kayıt olun!</a></div>
                </div>
            </div>
        </div>
    </div>
</div>

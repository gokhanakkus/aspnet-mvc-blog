@{
    ViewData["Title"] = "Kayıt Ol";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">Kayıt Ol</h3></div>
                <div class="card-body">

                    <form asp-action="Register">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-floating mb-3">
                            <label>Ad</label>
                            <input class="form-control" type="text" placeholder="Ad" />
                            
                            <span class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <label>Soyad</label>
                            <input class="form-control" type="text" placeholder="Soyad" />
                            
                            <span class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <label>Email</label>
                            <input class="form-control" type="email" placeholder="name@example.com" />
                            
                            <span class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <label>Parola</label>
                            <input class="form-control" type="password" placeholder="Parola" />
                            
                            <span class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <label>Telefon</label>
                            <input class="form-control" type="number" placeholder="Telefon" />
                            
                            <span class="text-danger"></span>
                        </div>
                        <div class="form-check mb-3">
                            <input class="form-check-input" id="inputRememberPassword" type="checkbox" value="" />
                            <label class="form-check-label" for="inputRememberPassword">Onaylıyorum</label>
                        </div>
                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                            <a class="small" asp-action="ForgotPassword">Zaten üye misiniz?</a>
                            <button type="submit" class="btn btn-primary" href="index.html">Kayıt Ol</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
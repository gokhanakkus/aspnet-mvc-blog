@model ErrorViewModel

@{
    ViewData["Title"] = "Oopps!!";
}

<!-- Error -->
<div class="container-xxl container-p-y">
    <div class="misc-wrapper">
        <h2 class="mb-2 mx-2">Sayfa Bulunamadı :(</h2>
        <p class="mb-4 mx-2">Oops! 😖 Bu sayfaya erişimde hata devam ediyorsa lütfen bize yazın.</p>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Anasayfaya dönün</a>
        <div class="mt-3">
            <img src="~/sneat/assets/img/illustrations/page-misc-error-light.png" alt="page-misc-error-light" width="500" class="img-fluid" data-app-dark-img="illustrations/page-misc-error-dark.png" data-app-light-img="illustrations/page-misc-error-light.png">
        </div> 
        <p>@Model.Message</p>
    </div>
</div>


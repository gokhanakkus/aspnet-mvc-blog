@model App.Web.Entity.Concrete.User
@{
    ViewData["Title"] = "Delete User";
}

<div class="container mt-5">
    <h3>Delete User</h3>
    <hr />

    <h3>Are you sure you want to delete this user?</h3>

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">User Details</h4>
            <dl class="row">
                <dt class="col-sm-3">Name:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>
                <dt class="col-sm-3">Email:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>
                <dt class="col-sm-3">City:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.City)</dd>
                <dt class="col-sm-3">Creation Date:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CreatedAt)</dd>
                <dt class="col-sm-3">Role:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.RoleId)</dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="text-center">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@using System.Web;
@model PostCRUDViewModel
@{
    ViewData["Title"] = "Delete Post";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h3 class="mt-4 mb-4">Are you sure you want to delete this?</h3>

            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Post</h4>
                    <hr />

                    <dl class="row">
                        <dt class="col-sm-3">Title:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>

                        <dt class="col-sm-3">Content:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Content)</dd>
                        
                        <dt class="col-sm-3">Slider:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.IsSlider)</dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        <div class="d-flex justify-content-between mt-4">
                            <input type="submit" value="Sil" class="btn btn-danger" />
                            <a asp-action="Index" class="btn btn-secondary">Return List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@model IEnumerable<App.Web.Entity.Concrete.PostComment>
@{
    ViewData["Title"] = "Comments";
}

<div class="container">
    <h2 class="my-4">Comments</h2> 
    <a asp-controller="Blogs" asp-action="Index" class="btn btn-secondary mb-3">Return List</a>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>No</th>
                <th>Comment</th>
                <th>Creation Date </th>
                <th>Username</th>
                <th>Post Title</th>
                <th>Update Date</th>
                <th>Deletion Date</th>
                <th>Active</th>
                <th>Transactions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.Comment)</td>
                    <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                    <td>@Html.DisplayFor(modelItem => item.User.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Post.Title)</td>
                    <td>@Html.DisplayFor(modelItem => item.UpdatedAt)</td>
                    <td>@Html.DisplayFor(modelItem => item.DeletedAt)</td>
                    <td>@Html.DisplayFor(modelItem => item.IsActive)</td>
                    <td>
                        <div class="btn-group" role="group" aria-label="Transactions">
                            <a class="btn btn-primary btn-sm" asp-action="Update" asp-route-id="@item.Id">Updated</a>
                                <a class="btn btn-danger btn-sm ms-2" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

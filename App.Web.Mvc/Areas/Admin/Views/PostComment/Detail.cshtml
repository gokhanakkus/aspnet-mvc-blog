@model IEnumerable<App.Web.Entity.Concrete.PostComment>
@{
    ViewData["Title"] = "Yorumlar";
}

<div class="container">
    <h2 class="my-4">Yorumlar</h2>
    <a asp-controller="Blogs" asp-action="Index" class="btn btn-secondary mb-3">Listeye Dön</a> 

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>No</th>
                <th>Yorum</th>
                <th>Oluşturulma Tarihi</th>
                <th>Kullanıcı Adı</th>
                <th>Gönderi Başlığı</th>
                <th>Güncelleme Tarihi</th>
                <th>Silinme Tarihi</th>
                <th>Aktif</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.Comment)</td>
                    <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                    <td>@Html.DisplayFor(modelItem => item.User.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Post.Title)</td>
                    <td>@Html.DisplayFor(modelItem => item.UpdatedAt)</td>
                    <td>@Html.DisplayFor(modelItem => item.DeletedAt)</td>
                    <td>@Html.DisplayFor(modelItem => item.IsActive)</td>
                    <td>
                        <div class="btn-group" role="group" aria-label="İşlemler">
                            <a class="btn btn-primary" asp-action="Update" asp-route-id="@item.Id">Düzenle</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@model App.Web.Entity.Concrete.PostComment
@{
    ViewData["Title"] = "Delete Comment";
}
<div class="container">
    <h3 class="my-4">Are you sure you want to delete this?</h3>
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Comment Detail</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">Comment</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Comment)</dd>
                <dt class="col-sm-2">User Name</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.User.Name)</dd>
                <dt class="col-sm-2">Post Title</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Post.Title)</dd>
            </dl>
        </div>
    </div>
    <form asp-action="Delete" method="post" class="mt-3">
        <input type="submit" value="Sil" class="btn btn-danger" /> 
        <a asp-action="Index" class="btn btn-secondary">Return List</a>
    </form>
</div>

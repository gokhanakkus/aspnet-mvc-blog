@model App.Web.Entity.Concrete.PostComment
@{
    ViewData["Title"] = "Yorum Düzenle";
}

<div class="container">
    <h4 class="my-4">Yorum Düzenle</h4>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Update" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="CreatedAt" />
                <input type="hidden" asp-for="UserId" />
                <input type="hidden" asp-for="PostId" />
                <div class="form-group mb-3">
                    <label asp-for="Comment" class="control-label">Yorum</label>
                    <input asp-for="Comment" class="form-control" disabled />
                    <span asp-validation-for="Comment" class="text-danger"></span>
                </div>
                <div class="form-group form-check mb-3">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                    </label>
                </div>
                <div class="form-group mb-3">
                    <a asp-action="Index" class="btn btn-secondary">Yorum Listesine Dön</a>
                    <input type="submit" value="Kaydet" class="btn btn-primary ml-2" />
                </div>
            </form>
        </div>
    </div>
</div>

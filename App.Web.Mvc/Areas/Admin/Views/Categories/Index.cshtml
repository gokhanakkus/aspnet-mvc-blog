@model IEnumerable<App.Web.Entity.Concrete.Category>
@{
    ViewData["Title"] = "Kategoriler";
}

<div class="container mt-5">
    <p>
        <a asp-action="Create" class="btn btn-outline-primary">Yeni Kategori Ekle</a>
    </p>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>No</th>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                @*<th>@Html.DisplayNameFor(model => model.ParentId)</th>*@
                @*<th>@Html.DisplayNameFor(model => model.Description)</th>*@
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    @*<td>@Html.DisplayFor(modelItem => item.ParentId)</td>*@
                    @*<td>@Html.DisplayNameFor(model => model.Description)</td>*@
                    <td>
                        <a class="btn btn-primary" asp-action="Update" asp-route-id="@item.Id">Düzenle</a>
                        <a class="btn btn-danger ms-2" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@model IEnumerable<App.Web.Entity.Concrete.Category>
@{
    ViewData["Title"] = "Kategoriler";
}

<div class="container mt-5">
    <p>
        <a asp-action="Create" class="btn btn-outline-primary">Yeni Kategori Ekle</a>
    </p>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>No</th>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>
                        <a class="btn btn-primary btn-sm" asp-action="Update" asp-route-id="@item.Id">Düzenle</a>
                        @if (item.DeletedAt != null)
                        {
                            <form asp-action="Restore" asp-route-id="@item.Id" method="post" class="d-inline">
                                <button type="submit" class="btn btn-success btn-sm ms-2">Geri Yükle</button>
                            </form>
                        }
                        else
                        {
                            <a class="btn btn-danger btn-sm ms-2" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
